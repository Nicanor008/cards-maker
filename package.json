{
  "name": "cardsmaker",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@tinymce/tinymce-react": "^3.5.0",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bulma": "^0.8.0",
    "chalk": "^3.0.0",
    "coveralls": "^3.0.9",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-15": "^1.4.1",
    "enzyme-adapter-react-16": "^1.15.2",
    "express": "^4.17.1",
    "googleapis": "^47.0.0",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.1",
    "morgan": "^1.9.1",
    "nodemailer": "^6.4.2",
    "nodemon": "^2.0.2",
    "parcel-bundler": "^1.12.4",
    "passport": "^0.4.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-bulma-components": "^3.1.3",
    "react-color": "^2.18.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1",
    "react-redux": "^7.2.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "toastr": "^2.1.4",
    "validator": "^12.2.0"
  },
  "scripts": {
    "start": "yarn run build && node ./dist-server/index.js",
    "start:client": "rimraf dist-client/ && yarn run client:build",
    "start:server": "rimraf dist-server/ && yarn run build:server",
    "start:dev": "yarn run server:dev && yarn client",
    "client": "parcel ./client/index.html",
    "client:watch": "parcel watch ./client/index.html",
    "client:build": "parcel build ./client/index.html -d ./dist-client",
    "server:dev": "nodemon --exec babel-node ./server/index.js",
    "build:server": "babel ./server -d ./dist-server --copy-files",
    "clean": "rimraf dist-client/ dist-server/",
    "build": "yarn run clean && yarn run client:build && yarn server:build",
    "test:client": "jest \"-u\" --coverage",
    "test:client:watch": "jest \"-u\" --watch",
    "test:update": "react-scripts test --env=jsdom --updateSnapshot",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "automock": false,
    "setupFilesAfterEnv": [
      "<rootDir>/client/src/__tests__/setupTests.js"
    ],
    "testEnvironment": "enzyme",
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/server/"
    ],
    "collectCoverageFrom": [
      "client/**/*.{js}",
      "!**/coverage/**"
    ],
    "coverageDirectory": "./client/coverage",
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "jest": "^25.1.0",
    "jest-environment-enzyme": "^7.1.2",
    "jest-enzyme": "^7.1.2"
  }
}
